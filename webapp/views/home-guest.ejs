    <div class="forum">
       <!-- Register form start ACTION=/register -->
      <form class="form" action="/login" method="POST" id="registration-form">

        <% Promise.resolve(regErrors.forEach(function(message) { %>
          <div id="flash" class="alert alert-danger small"><%= message %></div>
        <% })) %>

          <div class="form-group">
            <h1 class="form_title">Join Floc</h1>
            <p class="form_text"> to get access to a handbook packed with
              insightful advice for your travels
          </p>
          
          <div class="form_input-group">
            <label for="loginEmail">Username:</label>
            <label for="username-register" class="text-muted mb-1 forum"><small>Username</small></label>
            <input name="username" id="username-register" class="form_input" type="text" placeholder="Pick a username" autocomplete="off">
           </div>
          </div>
        
           
          <div class="form_input-group">
            <label for="loginPassword">Password:</label>
            <label for="password-register" class="text-muted mb-1 forum"><small>Password</small></label>
            <input name="password" id="password-register" class="form_input" type="password" placeholder="Create a password">
          </div>

          <p class="form_text">
            <a href="./Forgotten%20Password.html" class="form__link">Forgot Password</a>
          </p>

          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="form_button">Login</button>
          
          <h2>New User?</h2>

          <a href='/signin'>  
          <button class="form_button" type="button">Register</button> <br>
          </a>

        </form>
